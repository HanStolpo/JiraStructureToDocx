    build-depends:      base, 
                        containers >=0.1 && <0.6,
                        syb,
                        base64-bytestring,
                        tagsoup,
                        old-locale,
                        HTTP,
                        http-conduit, 
                        http-types, 
                        json, 
                        aeson, 
                        attoparsec, 
                        pretty, 
                        GenericPretty, 
                        directory,
                        mtl,
                        conduit == 1.1.7,
                        conduit-extra ,
                        transformers,
                        network,
                        bytestring,
                        HUnit,
                        parsec,
                        highlighting-kate ,
                        pandoc == 1.12.4.2,
                        pandoc-types == 1.12.4,
                        cmdargs,
                        safe,
                        blaze-markup,
                        utf8-string,
                        filepath,
                        test-framework-th,
                        test-framework,
                        test-framework-hunit,
                        raw-strings-qq,
                        resourcet,
                        monad-control,
                        random,
                        texmath,
                        xml,
                        time,
                        zip-archive,
                        data-default,
                        text,
                        yaml,
                        strings,
                        csv,
                        unordered-containers == 0.2.*,
                        binary,
                        deepseq


Test-Suite test-parser
    type:               exitcode-stdio-1.0
    default-language:   Haskell2010
    hs-source-dirs:     testsuite, src
    main-is:            TestDescriptionParser.hs
    other-modules:      DescriptionParser
    build-depends:      base, 
                        parsec, 
                        pretty, 
                        pandoc == 1.12.4.2,
                        pandoc-types == 1.12.4,
                        HUnit, 
                        GenericPretty,
                        bytestring,
