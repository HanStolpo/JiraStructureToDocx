                        PandocWriterHackedDocx,
                        base, 
                        unordered-containers == 0.2.*,
                        bytestring,
                        aeson, 
                        test-framework-th,
                        test-framework,
                        test-framework-hunit,
                        raw-strings-qq,
                        HUnit == 1.2.5.2,
                        pandoc == 1.12.4.2,
                        pandoc-types == 1.12.4,
                        pretty == 1.1.1.1,
                        GenericPretty, 
                        data-default == 0.5.3,
